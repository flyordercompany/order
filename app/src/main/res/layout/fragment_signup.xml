<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignupFragment"

    android:background="@drawable/login_or_sigup_for_background_png_imoge">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sign_up_skip_btn"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|right|center_horizontal|top"
                    android:foregroundGravity="left"
                    android:text="skip"
                    android:textColor="#008EFF" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/newlogo" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="FlyOrder"
                    android:textColor="#FF5722"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/sign_up_email"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_editview"
                    android:ems="10"
                    android:hint="Email ID"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:paddingTop="30dp"
                    />
                <EditText
                    android:id="@+id/sign_up_fullname"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_editview"
                    android:ems="10"
                    android:hint="Full name"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:paddingTop="30dp"
                    />


                <EditText
                    android:id="@+id/sign_up_password"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_editview"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:paddingTop="30dp"
                    android:hint="Password (at least 8 characters)"/>

                <EditText
                    android:id="@+id/sign_up_comform_password"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_editview"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:paddingTop="30dp"
                    android:hint="Comform Password"/>

                <ProgressBar
                    android:id="@+id/sig_up_progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/sign_up_signup_btn"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:background="#18EC20"
                    android:backgroundTint="#00FF0A"
                    android:text="Sign up!"
                    android:enabled="false"
                    android:textColor="#00FA0A"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <view
                        android:id="@+id/view"
                        class="com.google.android.material.textview.MaterialTextView"
                        android:layout_width="50dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="#00FF0A"
                        android:foregroundGravity="center"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:text="or with"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="50dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="100dp"
                        android:layout_weight="1"
                        android:background="#00FF0A" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sign_up_with_facebook_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/fbcolor"
                        android:drawableLeft="@drawable/facebooklogo"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Facebook"
                        android:textColor="#FFFFFF" />


                    <TextView
                        android:id="@+id/sign_up_with_gmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/googlecolor"
                        android:drawableLeft="@drawable/gmailogo"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Gmail"
                        android:textColor="#FFFFFF" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_already_have_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Already have Account ? Sign In"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/signup_report_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>