<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="700dp"
        android:cropToPadding="false"
        android:src="@drawable/forgotpasswordimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:text="Forgot Password ?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#18EC20"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="250dp"
        android:text="Dont't Wiirry,We just need your registered email address and it's done!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#Fd6920"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/forgot_password_email"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:backgroundTint="#18EC20"
        android:ems="10"
        android:theme="@style/Redprogerssbar"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="5dp"
        android:enabled="false"
        android:text="Reset Password"

        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#18EC20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_email" />

    <TextView
        android:id="@+id/forgot_password_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="24dp"
        android:text="&lt; &lt; Go back"
        android:textAllCaps="false"
        android:textColor="#18EC20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/forgot_password_email_icon_container"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_marginTop="350dp"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/forgot_password_redemail_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/gmailread"

            android:visibility="gone" />

        <ImageView
            android:id="@+id/forgot_password_Greenemail_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/gmailgreen"

            android:visibility="gone" />

        <TextView
            android:id="@+id/forgot_password_rednemail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="45dp"
            android:text="Recovery email sent successfully ! check your Inbox."
            android:textColor="#18EC20"
            android:visibility="gone" />
        <TextView
            android:id="@+id/forgot_password_Greenemail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="45dp"
            android:text="Recovery email sent successfully ! check your Inbox."
            android:textColor="#18EC20"
            android:visibility="gone" />


        <ProgressBar
            android:id="@+id/forgot_password_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:theme="@style/Redprogerssbar"
            android:visibility="gone" />


    </LinearLayout>


</RelativeLayout>
